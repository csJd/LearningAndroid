<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="dd.blackit.activity.AddBlActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="输入要加入黑名单的号码："
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="41dp"
        android:id="@+id/tv_hint" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_tel"
        android:layout_below="@+id/tv_hint"
        android:layout_alignParentStart="true"
        android:layout_marginTop="38dp"
        android:layout_alignEnd="@+id/tv_hint" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="拦截短信"
        android:id="@+id/cb_sms"
        android:layout_below="@+id/et_tel"
        android:layout_alignParentStart="true"
        android:layout_marginTop="34dp"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="拦截电话"
        android:id="@+id/cb_call"
        android:checked="false"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取消"
        android:id="@+id/bt_esc"
        android:layout_alignTop="@+id/bt_ok"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确定"
        android:id="@+id/bt_ok"
        android:layout_below="@+id/cb_call"
        android:layout_toEndOf="@+id/bt_esc"
        android:layout_marginTop="80dp" />
</RelativeLayout>
